[user]
	name = Jens Neuhalfen
	email = jens@neuhalfen.name
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[core]
	excludesfile = "~/.gitignore"
	editor = vim
[merge]
	tool = vimdiff
	summary = true
[push]
	default = matching
[diff]
	tool = vimdiff
[branch]
	autosetuprebase = always
[sendemail]
	smtpEncryption = tls
	smtpDomain = neuhalfen.name
	smtpUser = jens.neuhalfen
	smtpServer = mail.neuhalfen.name
	suppresscc = all
	smtpsslcertpath = /Users/jens/Documents/certificates/cacert.pem
	smtpServerPort = 25
